# Signaling Server URL for WebRTC
# For local development, use ws://localhost:4444
# For production, use your deployed signaling server URL (e.g., wss://signaling.yourdomain.com)
NUXT_PUBLIC_SIGNALING_MODE=statement-store
NUXT_PUBLIC_SIGNALING_SERVER=ws://localhost:4444

# Statement Store Signaling (PoP Stable testnet, aligned with sdchat)
NUXT_PUBLIC_STATEMENT_STORE_WS=wss://pop3-testnet.parity-lab.parity.io:443/7912
NUXT_PUBLIC_STATEMENT_STORE_SIGNING=mnemonic

# TURN Server Credentials
# Get free credentials at https://www.metered.ca/tools/openrelay/
# Leave empty to use STUN only (works for localhost testing)
NUXT_PUBLIC_TURN_USERNAME=
NUXT_PUBLIC_TURN_CREDENTIAL=

# Pinata Configuration
# Get your JWT from https://app.pinata.cloud/developers/api-keys
# Gateway: Your dedicated gateway domain (e.g., example-gateway.mypinata.cloud)
NUXT_PUBLIC_PINATA_JWT=
NUXT_PUBLIC_PINATA_GATEWAY=

# NFT Contract Address
# Deployed Sk3tchyNFT contract on PAsset Hub Testnet
NUXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x209409BbF8f332F8e0257C7bd600721e041d1b95

# Substrate RPC (Paseo Asset Hub)
# PAPI expects WS; if WS not provided we will derive from HTTP.
NUXT_PUBLIC_SUBSTRATE_RPC_HTTP=https://services.polkadothub-rpc.com/testnet
NUXT_PUBLIC_SUBSTRATE_RPC_WS=wss://sys.ibp.network/asset-hub-paseo
NUXT_PUBLIC_SUBSTRATE_CHAIN=paseo-asset-hub
NUXT_PUBLIC_SUBSTRATE_CHAIN_NAME="Paseo Asset Hub"
NUXT_PUBLIC_SUBSTRATE_CHAIN_ID=420420417
NUXT_PUBLIC_SUBSTRATE_DAPP_NAME="sk3tchy"
